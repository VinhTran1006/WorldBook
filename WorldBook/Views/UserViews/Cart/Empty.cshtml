@{
    ViewData["Title"] = "Cart is empty";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm">
                <div class="card-body py-5">
                    <i class="fas fa-shopping-cart text-muted" style="font-size: 80px;"></i>
                    <h3 class="mt-4 mb-3">Your cart is empty</h3>
                    <p class="text-muted mb-4">
                        Explore and add your favorite books to your cart!
                    </p>
                    <a href="@Url.Action("GetBookHomePage", "Book")" class="btn btn-primary btn-lg">
                        <i class="fas fa-book"></i> Explore books now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>