@model WorldBook.ViewModel.OrderDetailViewModel
@{
    ViewData["Title"] = "Order Failed";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Failed Message -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-x-circle-fill text-danger" style="font-size: 80px;"></i>
                    </div>
                    <h2 class="text-danger mb-3">Payment Failed!</h2>
                    <p class="text-muted mb-4">
                        Unfortunately, your payment was not successful or the session has expired.<br />
                        Your order has been <strong class="text-danger">cancelled</strong>.
                    </p>
                    <div class="alert alert-warning">
                        <strong>Order ID:</strong> #@Model.OrderId
                    </div>
                    <div class="alert alert-info">
                        @TempData["Error"]
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <p class="mb-3">What would you like to do next?</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("GetBookHomePage", "Book")" class="btn btn-primary">
                            <i class="bi bi-house"></i> Back to Home
                        </a>
                        <a href="@Url.Action("OrderHistory", "Order")" class="btn btn-outline-secondary">
                            <i class="bi bi-clock-history"></i> View My Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bi-x-circle-fill {
        animation: shake 0.5s ease-in-out;
    }

    @@keyframes shake {
        0%

    {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-5px);
    }

    50% {
        transform: translateX(5px);
    }

    75% {
        transform: translateX(-5px);
    }

    100% {
        transform: translateX(0);
    }

    }
</style>
