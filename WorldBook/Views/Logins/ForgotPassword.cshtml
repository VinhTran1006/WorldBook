<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - WorldBook</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(135deg, #39195e 0%, #9c4ee6 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25);
            width: 100%;
            max-width: 450px;
            padding: 40px;
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #39195e;
            text-decoration: none;
            font-size: 13px;
            font-weight: 500;
            transition: color 0.3s;
        }

            .back-link:hover {
                color: #9c4ee6;
            }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

            .header h1 {
                color: #39195e;
                font-size: 28px;
                margin-bottom: 10px;
            }

            .header p {
                color: #666;
                font-size: 14px;
                line-height: 1.5;
            }

        .info-box {
            background-color: #e7f3ff;
            border-left: 4px solid #3498db;
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 4px;
            font-size: 12px;
            color: #004085;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            color: #39195e;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 13px;
        }

        input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #f0f0f0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
            font-family: 'Montserrat', sans-serif;
        }

            input:focus {
                outline: none;
                border-color: #39195e;
                box-shadow: 0 0 0 3px rgba(57, 25, 94, 0.1);
                background-color: #fff;
            }

        button {
            width: 100%;
            padding: 12px;
            background-color: #39195e;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            button:hover {
                background-color: #9c4ee6;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(142, 106, 222, 0.5);
            }

            button:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .alert {
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 13px;
            animation: slideDown 0.3s ease;
        }

        .alert-success {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }

        .alert-error {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        .footer-links {
            text-align: center;
            margin-top: 20px;
        }

            .footer-links a {
                color: #39195e;
                text-decoration: none;
                font-size: 13px;
                font-weight: 500;
                transition: color 0.3s;
            }

                .footer-links a:hover {
                    color: #9c4ee6;
                    text-decoration: underline;
                }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 480px) {
            .container {
                padding: 30px 20px;
            }

            .header h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Forgot Password?</h1>
            <p>Enter your email and we will send a link to reset your password</p>
        </div>

        <div class="info-box">
            <strong>Note:</strong> Check your Spam folder if you don't find the email in your Inbox.
        </div>

        <div id="alertContainer"></div>

        <form id="forgotPasswordForm">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email"
                       id="email"
                       name="email"
                       placeholder="Enter your email"
                       required
                       autocomplete="email">
            </div>

            <button type="submit" id="submitBtn">Send Password Reset Link</button>
        </form>

        <div class="footer-links">
            <p>You have remembered the password? <a href="/Logins/Login">Login here</a></p>
        </div>
    </div>

    <script>
        const form = document.getElementById('forgotPasswordForm');
        const emailInput = document.getElementById('email');
        const submitBtn = document.getElementById('submitBtn');
        const alertContainer = document.getElementById('alertContainer');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const email = emailInput.value.trim();

            if (!email) {
                showAlert('Please enter email', 'error');
                return;
            }

            submitBtn.disabled = true;
            submitBtn.textContent = 'Sending...';

            try {
                const response = await fetch('/Logins/ForgotPassword', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });

                const result = await response.json();

                if (result.success) {
                    showAlert(result.message, 'success');
                    emailInput.value = '';
                    setTimeout(() => {
                        submitBtn.textContent = 'Send Password Reset Link';
                        submitBtn.disabled = false;
                    }, 2000);
                } else {
                    showAlert(result.message, 'error');
                    submitBtn.textContent = 'Send Password Reset Link';
                    submitBtn.disabled = false;
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.', 'error');
                submitBtn.textContent = 'Send Password Reset Link';
                submitBtn.disabled = false;
            }
        });

        function showAlert(message, type) {
            alertContainer.innerHTML = `<div class="alert alert-${type}">${message}</div>`;
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>