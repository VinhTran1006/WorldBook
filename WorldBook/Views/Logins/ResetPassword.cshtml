<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - WorldBook</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(135deg, #39195e 0%, #9c4ee6 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25);
            width: 100%;
            max-width: 450px;
            padding: 40px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

            .header h1 {
                color: #39195e;
                font-size: 28px;
                margin-bottom: 10px;
            }

            .header p {
                color: #666;
                font-size: 14px;
                line-height: 1.5;
            }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        label {
            display: block;
            color: #39195e;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 13px;
        }

        .password-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        input {
            width: 100%;
            padding: 12px 40px 12px 15px;
            border: 2px solid #f0f0f0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
            font-family: 'Montserrat', sans-serif;
        }

            input:focus {
                outline: none;
                border-color: #39195e;
                box-shadow: 0 0 0 3px rgba(57, 25, 94, 0.1);
                background-color: #fff;
            }

            input.is-invalid {
                border-color: #dc3545;
                background-color: #fff5f5;
            }

        .toggle-password {
            position: absolute;
            right: 12px;
            background: none;
            border: none;
            cursor: pointer;
            color: #39195e;
            font-size: 18px;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error-message {
            color: #dc3545;
            font-size: 12px;
            margin-top: 5px;
            text-align: left;
        }

        .strength-indicator {
            height: 4px;
            border-radius: 2px;
            margin-top: 5px;
            background-color: #e0e0e0;
            overflow: hidden;
        }

        .strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s;
        }

            .strength-bar.weak {
                width: 33%;
                background-color: #dc3545;
            }

            .strength-bar.medium {
                width: 66%;
                background-color: #ffc107;
            }

            .strength-bar.strong {
                width: 100%;
                background-color: #28a745;
            }

        button {
            width: 100%;
            padding: 12px;
            background-color: #39195e;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 10px;
        }

            button:hover {
                background-color: #9c4ee6;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(142, 106, 222, 0.5);
            }

            button:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .alert {
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 13px;
            animation: slideDown 0.3s ease;
        }

        .alert-success {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }

        .alert-error {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        .requirements {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 12px;
            margin-top: 15px;
            font-size: 12px;
        }

        .requirement-item {
            display: flex;
            align-items: center;
            margin: 6px 0;
            color: #666;
        }

        .requirement-check {
            width: 16px;
            height: 16px;
            margin-right: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }

        .requirement-item.met {
            color: #28a745;
        }

            .requirement-item.met .requirement-check {
                color: #28a745;
            }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 480px) {
            .container {
                padding: 30px 20px;
            }

            .header h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Reset Password</h1>
            <p>Enter your new password</p>
        </div>

        <div id="alertContainer"></div>

        <form id="resetPasswordForm">
            <input type="hidden" id="token" value="@Model.Token">

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <div class="password-wrapper">
                    <input type="password"
                           id="newPassword"
                           name="newPassword"
                           placeholder="Enter new password"
                           required>
                    <button type="button" class="toggle-password" onclick="togglePassword('newPassword')">👁️</button>
                </div>
                <div class="strength-indicator">
                    <div class="strength-bar" id="strengthBar"></div>
                </div>
                <div class="error-message" id="passwordError"></div>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <div class="password-wrapper">
                    <input type="password"
                           id="confirmPassword"
                           name="confirmPassword"
                           placeholder="Confirm password"
                           required>
                    <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">👁️</button>
                </div>
                <div class="error-message" id="confirmError"></div>
            </div>

            <div class="requirements">
                <div class="requirement-item" id="req-length">
                    <span class="requirement-check">✗</span>
                    <span>At least 6 characters</span>
                </div>
                <div class="requirement-item" id="req-match">
                    <span class="requirement-check">✗</span>
                    <span>Passwords match</span>
                </div>
            </div>

            <button type="submit" id="submitBtn">Reset Password</button>
        </form>
    </div>

    <script>
        const form = document.getElementById('resetPasswordForm');
        const newPasswordInput = document.getElementById('newPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        const submitBtn = document.getElementById('submitBtn');
        const alertContainer = document.getElementById('alertContainer');

        newPasswordInput.addEventListener('input', validatePassword);
        confirmPasswordInput.addEventListener('input', validatePassword);

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const errors = document.querySelectorAll('.error-message');
            let hasError = false;
            errors.forEach(err => {
                if (err.textContent.trim()) hasError = true;
            });

            if (hasError) {
                showAlert('Please correct the errors before continuing.', 'error');
                return;
            }

            submitBtn.disabled = true;
            submitBtn.textContent = 'Đang xử lý...';

            try {
                const response = await fetch('/Logins/ResetPassword', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        token: document.getElementById('token').value,
                        newPassword: newPasswordInput.value,
                        confirmPassword: confirmPasswordInput.value
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showAlert(result.message, 'success');
                    setTimeout(() => {
                        window.location.href = '/Logins/Login';
                    }, 2000);
                } else {
                    showAlert(result.message, 'error');
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Reset Password';
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.', 'error');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Reset Password';
            }
        });

        function validatePassword() {
            const pwd = newPasswordInput.value;
            const confirmPwd = confirmPasswordInput.value;
            const passwordError = document.getElementById('passwordError');
            const confirmError = document.getElementById('confirmError');
            const reqLength = document.getElementById('req-length');
            const reqMatch = document.getElementById('req-match');

            passwordError.textContent = '';
            confirmError.textContent = '';

            // Check length
            if (pwd && pwd.length < 6) {
                passwordError.textContent = 'Password must be at least 6 characters';
                reqLength.classList.remove('met');
            } else if (pwd.length >= 6) {
                reqLength.classList.add('met');
            }

            // Check match
            if (confirmPwd && pwd !== confirmPwd) {
                confirmError.textContent = 'Passwords do not match';
                reqMatch.classList.remove('met');
            } else if (pwd && confirmPwd && pwd === confirmPwd) {
                reqMatch.classList.add('met');
            }

            // Strength indicator
            updateStrengthBar(pwd);
        }

        function updateStrengthBar(pwd) {
            const bar = document.getElementById('strengthBar');
            bar.classList.remove('weak', 'medium', 'strong');

            if (!pwd) {
                bar.style.width = '0%';
            } else if (pwd.length < 8) {
                bar.classList.add('weak');
            } else if (pwd.length < 12 || !/[A-Z]/.test(pwd)) {
                bar.classList.add('medium');
            } else {
                bar.classList.add('strong');
            }
        }

        function togglePassword(fieldId) {
            const input = document.getElementById(fieldId);
            input.type = input.type === 'password' ? 'text' : 'password';
        }

        function showAlert(message, type) {
            alertContainer.innerHTML = `<div class="alert alert-${type}">${message}</div>`;
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>