@model WorldBook.ViewModel.FeedbackViewModel

@{
    ViewData["Title"] = "Feedback Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Feedback Detail</h2>

    <div class="card shadow-sm p-4">
        <div class="row">
            <div class="col-md-3 text-center">
                <img src="@Model.ImageUrl" alt="@Model.BookName" class="img-fluid rounded shadow-sm mb-3" />
            </div>
            <div class="col-md-9">
                <h4>@Model.BookName</h4>
                <p><strong>Customer:</strong> @Model.UserName</p>
                <p>
                    <strong>Rating:</strong>
                    @for (int i = 0; i < Model.Star; i++)
                    {
                        <i class="bi bi-star-fill text-warning"></i>
                    }
                    @for (int i = Model.Star ?? 0; i < 5; i++)
                    {
                        <i class="bi bi-star text-muted"></i>
                    }
                </p>
                <p><strong>Comment:</strong> @Model.Comment</p>
                <p><strong>Submitted on:</strong> @Model.CreateAt?.ToString("dd/MM/yyyy")</p>

                <hr />
                <form asp-action="Reply" method="post">
                    <input type="hidden" name="feedbackId" value="@Model.FeedbackId" />
                    <div class="mb-3">
                        <label for="replyContent" class="form-label fw-bold">Admin Reply</label>
                        <textarea id="replyContent" name="replyContent" class="form-control" rows="4"
                                  placeholder="Enter your reply here...">@Model.Reply</textarea>
                    </div>
                    <button type="submit" class="btn @(string.IsNullOrEmpty(Model.Reply) ? "btn-success" : "btn-warning")">
                        @if (string.IsNullOrEmpty(Model.Reply))
                        {
                            <text><i class="bi bi-send"></i> Send Reply</text>
                        }
                        else
                        {
                            <text><i class="bi bi-pencil-square"></i> Update Reply</text>
                        }
                    </button>
                </form>

                @if (!string.IsNullOrEmpty(Model.ReplyDate?.ToString()))
                {
                    <p class="mt-3 text-muted">
                        <small><em>Last updated on @Model.ReplyDate?.ToString("dd/MM/yyyy HH:mm") by @Model.ReplyAccountName</em></small>
                    </p>
                }
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
