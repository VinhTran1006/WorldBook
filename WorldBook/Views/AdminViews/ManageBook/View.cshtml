@model WorldBook.ViewModel.BookViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Books";
}


<h2 class="mb-3">Book List</h2>

<p>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBookModel"
            data-url="@Url.Action("Add", "Book")">
        <i class="bi bi-plus-circle"></i> Add Book
    </button>
</p>

<table class="table table-hover table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Book Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Publisher</th>
            <th>Supplier</th>
            <th>Added At</th>
            <th style="width:160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Books != null && Model.Books.Any())
        {
            foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.BookName</td>
                    <td>@book.BookPrice.ToString("C0")</td>
                    <td>@book.BookQuantity</td>
                    <td>@book.PublisherName</td>
                    <td>@book.SupplierName</td>
                    <td>@book.AddedAt.ToString("dd/MM/yyyy")</td>
                    <td>

                        <a href="@Url.Action("GetBookDetailsDashBoard", "Book", new { id = book.BookId })"
                           class="btn btn-sm btn-info text-white">
                            <i class="bi bi-eye"></i>
                        </a>

                        <a href="@Url.Action("Edit", "Book", new { id = book.BookId })"
                           class="btn btn-sm btn-warning text-white">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a href="@Url.Action("Delete", "Book", new { id = book.BookId })"
                           class="btn btn-sm btn-danger text-white">
                            <i class="bi bi-trash"></i>
                        </a>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted py-3">No books available.</td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="addBookModel" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Book</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="addBookModelBody"></div>
        </div>
    </div>
</div>

<!-- Toast thông báo -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
    <div id="liveToast" class="toast bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script>
        // Load partial vào modal khi mở
        $('#addBookModel').on('show.bs.modal', function (e) {
            var button = $(e.relatedTarget);
            var url = button.data('url');
            $("#addBookModelBody").load(url);
        });

        // Submit form trong modal bằng AJAX
        $('#addBookModel').on('submit', 'form', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: form.serialize(),
                success: function (res) {
                    if (res && res.success) {
                        $('#addBookModel').modal('hide');
                        showToast(res.message || "Thành công!");
                        location.reload();
                    } else {
                        $('#addBookModelBody').html(res); // render lại form khi validation fail
                    }
                },
                error: function () {
                    showToast("Có lỗi xảy ra, vui lòng thử lại!");
                }
            });
        });

        // Hàm show toast
        function showToast(message) {
            $('#liveToast .toast-body').text(message);
            var toast = new bootstrap.Toast(document.getElementById('liveToast'));
            toast.show();
        }
    </script>
}



