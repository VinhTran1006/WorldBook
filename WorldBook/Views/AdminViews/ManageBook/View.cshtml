@model WorldBook.ViewModel.BookViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Books";
}


<h2 class="mb-3">Book List</h2>

<p>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBookModel"
            data-url="@Url.Action("Add", "Book")">
        <i class="bi bi-plus-circle"></i> Add Book
    </button>
</p>

<table class="table table-hover table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Book Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Publisher</th>
            <th>Supplier</th>
            <th>Added At</th>
            <th style="width:160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Books != null && Model.Books.Any())
        {
            foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.BookName</td>
                    <td>@book.BookPrice.ToString("C0")</td>
                    <td>@book.BookQuantity</td>
                    <td>@book.PublisherName</td>
                    <td>@book.SupplierName</td>
                    <td>@book.AddedAt.ToString("dd/MM/yyyy")</td>
                    <td>

                        <button  class="btn btn-sm btn-info text-white" data-bs-toggle="modal" data-bs-target="#addBookModel"
                                data-url="@Url.Action("GetBookDetailsDashBoard", "Book", new { id = book.BookId })">
                            <i class="bi bi-eye"></i>
                        </button>

                        <button class="btn btn-sm btn-warning text-white" data-bs-toggle="modal" data-bs-target="#addBookModel"
                                data-url="@Url.Action("Edit", "Book", new { id = book.BookId })">
                            <i class="bi bi-pencil-square"></i>
                        </button>

                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#addBookModel"
                                data-url="@Url.Action("Delete", "Book", new { id = book.BookId })">
                            <i class="bi bi-trash"></i>
                        </button>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted py-3">No books available.</td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="addBookModel" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Book</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body" id="addBookModelBody"></div>
        </div>
    </div>
</div>

<!-- Full-page loading overlay -->
<div id="pageLoadingOverlay" style="
    display:none;
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background: rgba(255,255,255,0.7);
    z-index:2000;
    justify-content:center;
    align-items:center;
    flex-direction:column;
">
    <div class="spinner-border text-primary" role="status" style="width:3rem;height:3rem"></div>
    <p class="mt-2">Processing, Please wait...</p>
</div>


<!-- Toast thông báo -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
    <div id="liveToast" class="toast bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-body"></div>
    </div>
</div>

@section Scripts {
    <script>
        // Load partial vào modal khi mở
        $('#addBookModel').on('show.bs.modal', function (e) {
            var button = $(e.relatedTarget);
            var url = button.data('url');
            $("#addBookModelBody").load(url);
            console.log("pic selected");
        });

        // Submit form trong modal bằng AJAX
        $('#addBookModel').on('submit', 'form', function (e) {
             e.preventDefault();
              console.log("Submit captured!");
             var form = $(this);
               console.log("Action:", form.attr('action'), "Method:", form.attr('method'));
             var formData = new FormData(form[0]);


              $("#pageLoadingOverlay").css("display", "flex");

             $.ajax({
                 url: form.attr('action'),
                 type: form.attr('method'),
                 data: formData,
                 contentType: false,
                 processData: false,
                 success: function(res) {console.log("AJAX success", res);
                     // Ẩn loading
                     $("#loadingSpinner").remove();

                     if (res.success) {

                          $("#pageLoadingOverlay").hide();
                         // Đóng modal
                         $('#addBookModel').modal('hide');

                         // Hiện toast
                         showToast("Success");

                         // Refresh lại trang hoặc redirect
                         setTimeout(function () {
                             window.location.href = '/Book/GetBookDashBoard';
                         }, 1000);
                     } else {
                        console.log("Validation errors", res);
                     }
                 },
                 error: function() {console.log("AJAX error", err);
                     $("#loadingSpinner").remove();
                     showToast("Errror");
                 }
             });
         });


        // Hàm show toast
        function showToast(message) {
            $('#liveToast .toast-body').text(message);
            var toast = new bootstrap.Toast(document.getElementById('liveToast'));
            toast.show();
        }

    </script>
}



