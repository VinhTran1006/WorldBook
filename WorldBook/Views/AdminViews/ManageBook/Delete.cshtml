@model WorldBook.ViewModel.BookDetailViewModel

@{
    ViewData["Title"] = "Delete Book";
}

<h2 class="mb-4 text-danger">Delete Book</h2>

<div class="alert alert-danger" role="alert">
    <strong>⚠️ Warning!</strong> You are about to delete this book permanently.
    This action cannot be undone.
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="row">
            <!-- Cột trái: Ảnh sách -->
            <div class="col-md-4 text-center">
                <!-- Ảnh chính -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl1))
                {
                    <img src="@Url.Content(Model.ImageUrl1)"
                         class="img-thumbnail shadow-sm mb-3"
                         style="width:100%; max-width:260px; height:auto; object-fit:cover; border-radius:8px;"
                         alt="Main book image" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center mb-3"
                         style="width:100%; max-width:260px; height:350px; border-radius:8px;">
                        <span class="text-muted">No main image</span>
                    </div>
                }

                <!-- Ảnh phụ (3 ảnh nằm ngang, không có thanh kéo) -->
                <div class="d-flex justify-content-center align-items-center gap-2 flex-nowrap" style="overflow:hidden;">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl2))
                    {
                        <img src="@Url.Content(Model.ImageUrl2)"
                             class="img-thumbnail shadow-sm"
                             style="width:75px; height:100px; object-fit:cover; cursor:pointer;"
                             alt="Book image 2" />
                    }
                    @if (!string.IsNullOrEmpty(Model.ImageUrl3))
                    {
                        <img src="@Url.Content(Model.ImageUrl3)"
                             class="img-thumbnail shadow-sm"
                             style="width:75px; height:100px; object-fit:cover; cursor:pointer;"
                             alt="Book image 3" />
                    }
                    @if (!string.IsNullOrEmpty(Model.ImageUrl4))
                    {
                        <img src="@Url.Content(Model.ImageUrl4)"
                             class="img-thumbnail shadow-sm"
                             style="width:75px; height:100px; object-fit:cover; cursor:pointer;"
                             alt="Book image 4" />
                    }
                </div>
            </div>

            <!-- Cột phải: Thông tin sách -->
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Book Name</dt>
                    <dd class="col-sm-8">@Model.BookName</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.BookDescription</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.BookPrice.ToString("C0")</dd>

                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">@Model.BookQuantity</dd>

                    <dt class="col-sm-4">Publisher</dt>
                    <dd class="col-sm-8">@Model.PublisherName</dd>

                    <dt class="col-sm-4">Supplier</dt>
                    <dd class="col-sm-8">@Model.SupplierName</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="d-flex gap-2 justify-content-end">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.BookId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
</form>
