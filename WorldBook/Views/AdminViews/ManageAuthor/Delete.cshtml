@model WorldBook.Models.Author

@{
    Layout = null; // để dùng trong modal
}

<div class="container">
    <h4 class="mb-3 text-danger">Delete Author</h4>
    <p>Are you sure you want to delete this author?</p>

    <dl class="row">
        <dt class="col-sm-3 fw-bold">Author Name</dt>
        <dd class="col-sm-9">@Model.AuthorName</dd>

        <dt class="col-sm-3 fw-bold">Description</dt>
        <dd class="col-sm-9">@Model.AuthorDescription</dd>

        <dt class="col-sm-3 fw-bold">Active</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive == true)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="AuthorId" />
        <div class="text-end">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </div>
    </form>
</div>
