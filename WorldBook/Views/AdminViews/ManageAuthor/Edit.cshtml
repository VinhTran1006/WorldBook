@model WorldBook.Models.Author
@{
    Layout = null;
}

<form id="editAuthorForm" asp-action="Edit" method="post">
    <input type="hidden" asp-for="AuthorId" />

    <div class="mb-3">
        <label asp-for="AuthorName" class="form-label fw-bold"></label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AuthorDescription" class="form-label fw-bold"></label>
        <textarea asp-for="AuthorDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="AuthorDescription" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <div class="text-end">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Close
        </button>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Save changes
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
