@model WorldBook.Models.Category;


<div class="card-header bg-primary text-white">
    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Edit Category</h3>
</div>

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<form id="editCategoryForm" asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <input type="hidden" asp-for="CategoryId" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="CategoryName" class="form-label"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CategoryDescription" class="form-label"></label>
            <input asp-for="CategoryDescription" class="form-control" />
            <span asp-validation-for="CategoryDescription" class="text-danger small"></span>
        </div>
    </div
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-success px-4">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
   
}
