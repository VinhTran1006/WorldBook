@model WorldBook.ViewModel.StatisticsViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Statistics Dashboard";
}

<div class="container-fluid">
    <h2 class="mb-4">
        <i class="bi bi-graph-up"></i> Statistics Dashboard
    </h2>

    <!-- Overview Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Orders</h6>
                            <h2 class="mb-0">@Model.TotalOrders</h2>
                        </div>
                        <i class="bi bi-cart-check fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Completed</h6>
                            <h2 class="mb-0">@Model.CompletedOrders</h2>
                        </div>
                        <i class="bi bi-check-circle fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Pending</h6>
                            <h2 class="mb-0">@Model.PendingOrders</h2>
                        </div>
                        <i class="bi bi-hourglass-split fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Avg Order Value</h6>
                            <h2 class="mb-0">@Model.AverageOrderValue.ToString("N0") $</h2>
                        </div>
                        <i class="bi bi-cash-stack fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Loyalty Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-people-fill"></i> Customer Loyalty Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <i class="bi bi-people fs-1 text-secondary"></i>
                                <h3 class="mt-2">@Model.TotalCustomers</h3>
                                <p class="text-muted mb-0">Total Customers</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <i class="bi bi-star-fill fs-1 text-success"></i>
                                <h3 class="mt-2">@Model.LoyalCustomers</h3>
                                <p class="text-muted mb-0">Very Loyal (≥5 orders)</p>
                                <small class="text-success">@((Model.TotalCustomers > 0 ? (Model.LoyalCustomers * 100.0 / Model.TotalCustomers) : 0).ToString("F1"))%</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <i class="bi bi-star-half fs-1 text-info"></i>
                                <h3 class="mt-2">@Model.RegularCustomers</h3>
                                <p class="text-muted mb-0">Regular (2-4 orders)</p>
                                <small class="text-info">@((Model.TotalCustomers > 0 ? (Model.RegularCustomers * 100.0 / Model.TotalCustomers) : 0).ToString("F1"))%</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <i class="bi bi-star fs-1 text-warning"></i>
                                <h3 class="mt-2">@Model.OccasionalCustomers</h3>
                                <p class="text-muted mb-0">Occasional (1 order)</p>
                                <small class="text-warning">@((Model.TotalCustomers > 0 ? (Model.OccasionalCustomers * 100.0 / Model.TotalCustomers) : 0).ToString("F1"))%</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Statistics -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up-arrow"></i> Revenue Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 text-center">
                            <h6 class="text-muted">Today</h6>
                            <h3 class="text-success">@Model.TodayRevenue.ToString("N0") $</h3>
                        </div>
                        <div class="col-md-4 text-center">
                            <h6 class="text-muted">This Month</h6>
                            <h3 class="text-success">@Model.MonthRevenue.ToString("N0") $</h3>
                        </div>
                        <div class="col-md-4 text-center">
                            <h6 class="text-muted">This Year</h6>
                            <h3 class="text-success">@Model.YearRevenue.ToString("N0") $</h3>
                        </div>
                    </div>
                    <hr>
                    <h6 class="mb-3">Last 30 Days Revenue</h6>
                    <canvas id="revenueChart" height="80"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-book"></i> Inventory</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4 text-center">
                        <i class="bi bi-box-seam fs-1 text-primary"></i>
                        <h3 class="mt-2">@Model.TotalBooks</h3>
                        <p class="text-muted mb-0">Total Active Books</p>
                    </div>
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle fs-1 text-warning"></i>
                        <h3 class="mt-2">@Model.LowStockBooks</h3>
                        <p class="text-muted mb-0">Low Stock Books (&lt;10)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Revenue Chart -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar3"></i> Monthly Revenue (Last 12 Months)</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyRevenueChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Cancelled Orders Statistics -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-x-circle"></i> Cancelled Orders Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 text-center">
                            <h6 class="text-muted">Today</h6>
                            <h3 class="text-danger">@Model.TodayCancelledOrders</h3>
                        </div>
                        <div class="col-md-4 text-center">
                            <h6 class="text-muted">This Month</h6>
                            <h3 class="text-danger">@Model.MonthCancelledOrders</h3>
                        </div>
                        <div class="col-md-4 text-center">
                            <h6 class="text-muted">This Year</h6>
                            <h3 class="text-danger">@Model.YearCancelledOrders</h3>
                        </div>
                    </div>
                    <hr>
                    <h6 class="mb-3">Last 30 Days Cancelled Orders</h6>
                    <canvas id="cancelledChart" height="80"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-percent"></i> Cancellation Rate</h5>
                </div>
                <div class="card-body text-center">
                    @{
                        var cancellationRate = Model.TotalOrders > 0
                        ? (Model.YearCancelledOrders * 100.0 / Model.TotalOrders)
                        : 0;
                    }
                    <canvas id="cancellationRateChart" width="200" height="200"></canvas>
                    <h3 class="mt-3">@cancellationRate.ToString("F1")%</h3>
                    <p class="text-muted mb-0">Yearly Cancellation Rate</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Cancelled Orders Chart -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-x"></i> Monthly Cancelled Orders (Last 12 Months)</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyCancelledChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Daily Revenue Chart
        const dailyRevenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(dailyRevenueCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DailyRevenue.Select(d => d.Date.ToString("dd/MM")))),
                datasets: [{
                    label: 'Revenue ($)',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DailyRevenue.Select(d => d.Revenue))),
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Monthly Revenue Chart
        const monthlyRevenueCtx = document.getElementById('monthlyRevenueChart').getContext('2d');
        new Chart(monthlyRevenueCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyRevenue.Select(m => m.MonthName + " " + m.Year))),
                datasets: [{
                    label: 'Revenue ($)',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyRevenue.Select(m => m.Revenue))),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Daily Cancelled Orders Chart
        const cancelledCtx = document.getElementById('cancelledChart').getContext('2d');
        new Chart(cancelledCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DailyCancelledOrders.Select(d => d.Date.ToString("dd/MM")))),
                datasets: [{
                    label: 'Cancelled Orders',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DailyCancelledOrders.Select(d => d.Count))),
                    borderColor: 'rgb(255, 99, 132)',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Monthly Cancelled Orders Chart
        const monthlyCancelledCtx = document.getElementById('monthlyCancelledChart').getContext('2d');
        new Chart(monthlyCancelledCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyCancelledOrders.Select(m => m.MonthName + " " + m.Year))),
                datasets: [{
                    label: 'Cancelled Orders',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyCancelledOrders.Select(m => m.Count))),
                    backgroundColor: 'rgba(255, 99, 132, 0.6)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Cancellation Rate Doughnut Chart
        const cancellationRateCtx = document.getElementById('cancellationRateChart').getContext('2d');
        const cancelledCount = @Model.YearCancelledOrders;
        const completedCount = @Model.TotalOrders - cancelledCount;

        new Chart(cancellationRateCtx, {
            type: 'doughnut',
            data: {
                labels: ['Completed', 'Cancelled'],
                datasets: [{
                    data: [completedCount, cancelledCount],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(255, 99, 132, 0.6)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}