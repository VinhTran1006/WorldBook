@model WorldBook.Models.Voucher

@{
    ViewData["Title"] = "Delete Voucher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Delete Voucher</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this voucher? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Voucher Code:</dt>
                        <dd class="col-sm-9">@Model.VoucherCode</dd>

                        <dt class="col-sm-3">Discount Percent:</dt>
                        <dd class="col-sm-9">@Model.DiscountPercent%</dd>

                        <dt class="col-sm-3">Expiry Date:</dt>
                        <dd class="col-sm-9">@Model.ExpriryDate?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Minimum Order Amount:</dt>
                        <dd class="col-sm-9">@(Model.MinOrderAmount?.ToString("N0") ?? "N/A")</dd>

                        <dt class="col-sm-3">Maximum Order Amount:</dt>
                        <dd class="col-sm-9">@(Model.MaxOrderAmount?.ToString("N0") ?? "N/A")</dd>

                        <dt class="col-sm-3">Usage Count:</dt>
                        <dd class="col-sm-9">@Model.UsageCount</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive == true)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@(Model.VoucherDescription ?? "N/A")</dd>
                    </dl>
                </div>

                <div class="card-footer">
                    <form asp-action="Delete" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="VoucherId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>