@model WorldBook.Models.Author

<div class="container mt-3 mb-3">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Author</h3>
        </div>

        <div class="card-body p-4">
            <form id="authorForm" method="post" enctype="multipart/form-data" action="@Url.Action("Create", "Authors")">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="AuthorName" class="form-label fw-bold"></label>
                    <input asp-for="AuthorName" class="form-control" placeholder="Enter Author Name" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AuthorDescription" class="form-label fw-bold"></label>
                    <textarea asp-for="AuthorDescription" class="form-control" rows="3" placeholder="Author Description"></textarea>
                    <span asp-validation-for="AuthorDescription" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
