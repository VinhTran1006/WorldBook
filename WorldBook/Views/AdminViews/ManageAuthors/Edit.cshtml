@model WorldBook.Models.Author

<div class="card-header bg-primary text-white mb-3">
    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Author</h3>
</div>

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<form id="editAuthorForm" asp-controller="Authors" asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <input type="hidden" asp-for="AuthorId" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="AuthorName" class="form-label"></label>
            <input asp-for="AuthorName" class="form-control" />
            <span asp-validation-for="AuthorName" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="AuthorDescription" class="form-label"></label>
            <input asp-for="AuthorDescription" class="form-control" />
            <span asp-validation-for="AuthorDescription" class="text-danger small"></span>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-success px-4">Save</button>
        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
