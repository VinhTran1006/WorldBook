@model WorldBook.Models.Author

<div class="card-header bg-primary text-white mb-3">
    <h3 class="mb-0"><i class="bi bi-trash"></i> Delete Author</h3>
</div>

<div class="alert alert-danger" role="alert">
    <strong>⚠️ Warning!</strong> You are about to delete this author permanently.
    This action cannot be undone.
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Author ID</dt>
                    <dd class="col-sm-8">@Model.AuthorId</dd>

                    <dt class="col-sm-4">Author Name</dt>
                    <dd class="col-sm-8">@Model.AuthorName</dd>

                    <dt class="col-sm-4">Author Description</dt>
                    <dd class="col-sm-8">@Model.AuthorDescription</dd>

                </dl>
            </div>
        </div>
    </div>
</div>

<form asp-action="DeleteConfirm" method="post" class="d-flex gap-2 justify-content-end">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.AuthorId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
